<Window x:Class="IBP2018.View.WaitForNewMeasurementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IBP2018.View"
        mc:Ignorable="d"
        Title="Wait For New Measurement Dialog" Height="130" Width="400" WindowStyle="None" ShowInTaskbar="False">
    <StackPanel>
        <Label Content="CREATE NEW DATA TABLES" FontSize="28"/>
        <Label Content="PLEASE WAIT..." FontSize="28"/>
        <ProgressBar x:Name="pgWait" Value="50" Height="20" Margin="0,2,0,0"/>
    </StackPanel>
</Window>
